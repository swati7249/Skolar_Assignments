/* Apply css to the elements */
h1 {
    display:flex;
    background-color:black;
    color: white;
    margin:0;
    justify-content:center;
    font-size: 24px;
    padding:10px;
}

p {
    font-family: Arial, sans-serif;
    font-size: 16px;
    line-height: 1.5;
}

a {
    text-decoration: none;
    color: #0074D9;
}
/* Apply css on class selector */
.heading{
    background-color:antiquewhite;
    padding:10px;
}
/* Apply css on id selector */
#par{
    font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif ;
}
/* Apply styles using attribute selector */
a[target="_blank"] {
    font-style: italic;
}


/* Apply styles using pseudo-class */
a:hover {
    color: #FF4136;
}
/* Apply styles using pseudo-element */
p::first-line {
    font-weight: 700;
}

    </style>
</head>

